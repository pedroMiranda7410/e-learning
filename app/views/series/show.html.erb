<section id="serie-information">
    <div class="serie-title"> <%= @serie.title %></div>
    <div class="serie-description"> <%= @serie.description %></div>
    <div class="serie-image-url"> <%= @serie.image_url %></div>
</section>

<section id="series-lessons" class='series-list'>
    <% @lessons.each do |lesson|%>
     
        <a href="/lessons/<%= lesson.id %>" class="serie">
            <div class="info"> 
                <h2><%= lesson.title %></h2>
                <p><%= lesson.description %></p>
            
            </div>
        </a>
        

    <%end%>
   
</section>

<%= link_to "Cadastrar Aula", lessons_new_path %>
  