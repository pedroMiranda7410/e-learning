<div class="login-container">
    <h2>login</h2>

    <%= form_with url: session_create_path, method: :post, id: 'loginForm' do %>
        <%= label_tag :user_type, "Eu sou:" %>
        <%= select_tag :user_type, options_for_select([['Estudante', 'student'], ['Professor', 'teacher']]), required: true %>

        <%= label_tag :email, "Email:" %>
        <%= email_field_tag :email, nil, required: true %>

        <%= label_tag :password, "Senha:" %>
        <%= password_field_tag :password, nil, required: true %>

        <%= submit_tag "Entrar" %>
    <% end %>
    <p>NÃ£o tem uma conta? <a href="cadastro.html">cadastro</a></p>
</div>